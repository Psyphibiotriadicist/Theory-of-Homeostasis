                        'rgba(56, 189, 248, 1)',
                        'rgba(16, 185, 129, 1)',
                        'rgba(245, 158, 11, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y', // This makes it a horizontal bar chart
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: { // Was y, now x for horizontal
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Duration (Years)',
                            color: '#475569' // text-slate-600
                        },
                        ticks: {
                            color: '#475569' 
                        },
                        grid: {
                            color: '#e2e8f0' // border-slate-200
                        }
                    },
                    y: { // Was x, now y for horizontal
                        ticks: {
                            color: '#475569',
                            font: {
                                size: 10 // Adjust font size if labels are too long
                            },
                            // Callback to wrap long labels
                            callback: function(value, index, values) {
                                const label = this.getLabelForValue(value);
                                if (label.length > 30) { // Max length before trying to split
                                    const words = label.split(' ');
                                    const lines = [];
                                    let currentLine = '';
                                    words.forEach(word => {
                                        if ((currentLine + word).length > 30) {
                                            lines.push(currentLine.trim());
                                            currentLine = '';
                                        }
                                        currentLine += word + ' ';
                                    });
                                    lines.push(currentLine.trim());
                                    return lines;
                                }
                                return label;
                            }
                        },
                         grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false // Hiding legend as it's clear from title
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.x !== null) {
                                    label += context.parsed.x + (context.label.includes("Phase 3") ? '+ years (symbolic)' : ' years');
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });

        // Gemini API Integration
        const apiKey = ""; // Canvas will provide this at runtime

        async function callGeminiAPI(prompt, outputElement, loadingSpinnerElement) {
            outputElement.innerHTML = '<p class="text-slate-500">Thinking...</p>';
            loadingSpinnerElement.classList.remove('hidden');

            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });

            const payload = { contents: chatHistory };
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    outputElement.innerHTML = `<p>${text.replace(/\n/g, '<br>')}</p>`;
                } else {
                    outputElement.innerHTML = '<p class="text-red-500">Error: Could not get a valid response from the AI. Please try again.</p>';
                }
            } catch (error) {
                console.error('Error calling Gemini API:', error);
                outputElement.innerHTML = `<p class="text-red-500">Error: Failed to connect to the AI. Please check your network connection or try again later.</p>`;
            } finally {
                loadingSpinnerElement.classList.add('hidden');
            }
        }

        // Homeostasis State Analyzer Logic
        const homeostasisInput = document.getElementById('homeostasis-input');
        const analyzeHomeostasisButton = document.getElementById('analyze-homeostasis-button');
        const homeostasisOutput = document.getElementById('homeostasis-output');
        const analyzerLoadingSpinner = document.getElementById('analyzer-loading-spinner');

        analyzeHomeostasisButton.addEventListener('click', () => {
            const userState = homeostasisInput.value.trim();
            if (userState) {
                const prompt = `Based on the principles of Psyphibiotriadics (which integrates Psychological Mind, Physical Brain and Body, and Philosophical Energies for holistic well-being and homeostasis), analyze the following user's described state. Provide a brief assessment of which pillars might be in balance or imbalance, and suggest a general direction for achieving better harmony. User's state: "${userState}"`;
                callGeminiAPI(prompt, homeostasisOutput, analyzerLoadingSpinner);
            } else {
                homeostasisOutput.innerHTML = '<p class="text-red-500">Please describe your current state to get an analysis.</p>';
            }
        });

        // Intervention Idea Generator Logic
        const interventionPillarSelect = document.getElementById('intervention-pillar');
        const interventionContextInput = document.getElementById('intervention-context');
        const generateInterventionsButton = document.getElementById('generate-interventions-button');
        const interventionsOutput = document.getElementById('interventions-output');
        const generatorLoadingSpinner = document.getElementById('generator-loading-spinner');

        generateInterventionsButton.addEventListener('click', () => {
            const focusPillar = interventionPillarSelect.value;
            const context = interventionContextInput.value.trim();
            
            let prompt = `Based on the principles of Psyphibiotriadics, which emphasizes multi-modal interventions across Psychological Mind, Physical Brain and Body, and Philosophical Energies to achieve homeostasis:`;

            if (focusPillar === "Overall Balance") {
                prompt += ` Please suggest 3-5 general multi-modal intervention ideas for achieving overall balance.`;
            } else {
                prompt += ` Please suggest 3-5 specific intervention ideas focused on improving the "${focusPillar}" pillar, while considering its interconnectedness with the other two pillars.`;
            }

            if (context) {
                prompt += ` Consider the following additional context: "${context}".`;
            }

            prompt += ` Provide actionable and concise suggestions.`;

            callGeminiAPI(prompt, interventionsOutput, generatorLoadingSpinner);
        });

